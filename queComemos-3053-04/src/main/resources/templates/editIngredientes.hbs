{{# partial "titulo" }}
	<title>Receta - QueComemos</title>
{{/partial}}

{{# partial "contenido" }}
<h1>Edicion de Ingredientes</h1>
<br></br>
<body>
	<div class="container">
		<form action="/receta/{{id}}/editar/ingrediente" method= "POST">
			<div class="row">
				<h3>Ingrediente a agregar</h3>
				<div class="col-md-6">
					<table class="table table-bordered">
						<td>
							<strong>Ingrediente</strong>
							<input type="text" name="ingrediente">
						</td>
						<td>
							<strong>Cantidad</strong>
							<input type="text" name="dosising" value= {{dosising}}>
						</td>
						<td>
					</table>
				</div>
			</div>
			<div class="row">
				<h3>Ingrediente a quitar</h3>		
				<br>		
				<div class="col-md-2">
					<select class="form-control" name="ingredienteSeleccionado">
						<option></option>
						{{#receta.ingredientes}}
							<option>{{nombre}}</option>
						{{/receta.ingredientes}}
					</select>
				</div>
			</div>
				
			<br><br>

			<div class="row">
				<div class="col-md-6">
					<p class="text-center"><a class="btn btn-primary btn-lg" href="/receta/{{id}}" role="button">Volver</a></p>
				</div>
				<div class="col-md-6">
					<p class = "text-center"><button type="submit" class="btn btn-primary btn-lg">Guardar</button></p>
				</div>
			</div>	
		</form>	
	</div>
</body>
{{/partial}}

{{> layout.hbs }}