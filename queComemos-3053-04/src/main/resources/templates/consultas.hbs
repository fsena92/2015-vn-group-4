						<label for="filtroTemporada">Temporada</label>		
					</div>
					<div class="col-md-4">
					<select class="form-control" name="filtroTemporada">
						<option></option>
						{{#temporadas}}
							<option>{{name}}</option>
						{{/temporadas}}
					</select>
					</div>
				</div>
			</div>
		
	
	<br>
	       <div class="row">
