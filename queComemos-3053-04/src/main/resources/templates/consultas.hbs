	<div class="container">
		<form action="/consultas" method= "GET">
			
	<div class="col-md-6">
				<div class="row">
					<div class="row">
						<div class="col-md-2">
							<label for="filtro"> Nombre</label>		
						</div>
					<div class="col-md-4">
						<input type="text" name="filtroNombre">
					</div>
					</div>
		 
			
		
				</div>
	<br>
	
			<div class="row">
		
				<div class="row">
					<div class="col-md-2">
					<label for="filtroDificultad">Dificultad</label>		
				</div>
				<div class="col-md-4">
				<select class="form-control" name="filtroDificultad">
